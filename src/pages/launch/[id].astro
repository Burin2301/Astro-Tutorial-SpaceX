---
import type { GetStaticPaths } from "astro";
import Layout from '../../layouts/Layout.astro'
import {getLaunchByID, getLaunches} from '../../services/apiService'

const {id} = Astro.params

let launch
if(id){
    launch = await getLaunchByID({id})
}

export const getStaticPaths = ( async () => {
    const launches = await getLaunches()

    return launches.map(launch=>({
        params: {id:launch.id}
    }))

}) satisfies GetStaticPaths;

---


<Layout title={`Lanzamiento ${launch.id}`}>
    <article class="flex gap-y-4 flex-col">
        <img
        class="w-52 h-auto"
        src={launch?.links.patch.small}
        alt={launch?.name}
        />

        <h2 class="text-5xl text-white font-bold">Launch #{launch?.flight_number} </h2>

        <p class="text-4xl text-white font-bold">#{launch?.details}</p>

    </article>
    
</Layout>